<div class="container">
    <div class="row">
        {{#each albums}}
        <div class="col-md-4 mb-4">
            <div class="card">
                <img src="{{this.images.1.url}}" class="card-img-top" alt="">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <a href="/tracks/{{this.id}}" class="btn btn-primary">View tracks</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
