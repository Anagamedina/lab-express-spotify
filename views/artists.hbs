<div class="container">
    <div class="row justify-content-center">
        {{#each artists}}
        <div class="col-md-4 col-sm-6 col-lg-3 mb-4">
            <div class="card artist">
                <img src="{{this.images.1.url}}" class="card-img-top" alt="">
                <div class="card-body">
                    <h4 class="card-title mt-3">{{this.name}}</h4>
                    <a href="/albums/{{this.id}}" class="btn btn-primary">View Albums</a>
                </div>
            </div>
        </div>
        {{/each}}
    </div>
</div>
